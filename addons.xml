<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
<addon id="repository.neofreko" name="neofreko Add-on Repository" version="1.0.0" provider-name="neofreko">
	<extension point="xbmc.addon.repository" name="neofreko Add-on Repository">
		<info compressed="false">http://github.com/neofreko/xbmc-animedreaming/raw/master/addons.xml</info>
		<checksum>http://github.com/neofreko/xbmc-animedreaming/raw/master/addons.xml.md5</checksum>
		<datadir zip="true">http://github.com/neofreko/xbmc-animedreaming/raw/master/repo</datadir>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary>Install Add-ons from neofreko Add-on Repository</summary>
		<description>Animedreaming.tv clients for xbmc</description>
		<disclaimer></disclaimer>
		<platform>all</platform>
	</extension>
</addon>

<addon id="plugin.video.animedreaming.tv"
       name="Animedreaming.tv"
       version="0.0.3"
       provider-name="Akhmad Fathonih">
  <requires>
    <import addon="xbmc.python" version="2.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource"
            library="default.py">
        <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <platform>all</platform>
    <summary lang="en">Animedreaming.tv for XBMC</summary>
    <description lang="en">List recent Animedreaming.tv anime and provides menu to play anime from</description>
  </extension>
</addon>
</addons>
